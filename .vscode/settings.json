{
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,

    // To hide node_modules from file explorer view
    "files.exclude": {
        "node_modules/": true,
        ".venv/": true,
        ".pytest_cache/": true,
        ".coverage": true,
        "**/__pycache__/": true,
        "htmlcov/": true
    },
    "search.exclude": {
        "node_modules/": true,
        ".venv/": true,
        ".pytest_cache/": true,
        ".coverage": true
    },
    "files.watcherExclude": {
        "**/node_modules/**": true,
        "**/.venv/**": true,
        "**/.pytest_cache/**": true,
        "**/.coverage/**": true,
        "**/__pycache__/**": true,
        "**/.git/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/.hg/store/**": true
    }
}